<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Online Medicine Store</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/Header.css" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Serif&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <script src="https://use.fontawesome.com/7b1cae8ae3.js"></script>
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Serif&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <script src="https://use.fontawesome.com/7b1cae8ae3.js"></script>
    </environment>

    
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">

            <!-- Links -->


            <button type="button" id="navbar-toggler-button" class="navbar-toggler" data-toggle="collapse" data-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="menu">

                <ul class="navbar-nav flex-grow-1">
                    
                    <li class="nav-item  nav-link px-5">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item nav-link px-5">
                        <a class="nav-link" asp-controller="Home" asp-action="aboutus">About Us</a>
                    </li>

                    <li class="nav-item nav-link px-5">
                        <a class="nav-link" asp-controller="Home" asp-action="contactus">Contact Us</a>
                    </li>

                </ul>

                <ul class="navbar-nav justify-content-end">
                    <partial name="_LoginInfo" />
                    <li class="nav-item dropdown  nav-link px-5 justify-content-end">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Login
                        </a>
                        <div class="dropdown-menu" aria-labelledbyId="navbarDropdownMenuLink">

                            <a class="dropdown-item" asp-action="login" asp-controller="account">Admin Login</a>
                            <a class="dropdown-item" asp-action="login" asp-controller="account">User Login</a>

                        </div>
                    </li>
                    <li class="nav-item  nav-link px-5 justify-content-end">
                        <a class="nav-link" asp-controller="account" asp-action="signup">SignUp</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>
    <script src=" https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>
