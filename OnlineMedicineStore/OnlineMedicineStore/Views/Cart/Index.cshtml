
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                MedicineName
            </th>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Sub-Total
            </th>
            <th>
                Option
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.cart)
        {
        <tr>
            <td>
                @item.Medicines.MedicineName
            </td>
            <td>
                @item.Medicines.Description
            </td>
            <td>
                @item.Medicines.Category
            </td>
            <td>
                @item.Medicines.Price
            </td>
            <th>
                @item.Quantity
            </th>
            <th>
                @(item.Quantity * item.Medicines.Price)
            </th>

            <td>
                <a asp-action="Remove" class="btn btn-danger" asp-route-id="@item.Medicines.Id">Remove this</a>

            </td>

        </tr>
        }
    <tr>

        <td align="right" colspan="6"> <p class=" h4"> Total Bill : </p></td>
        <td>
            <h4 class=" h4">
                @ViewBag.total Rs
            </h4>
        </td>
    </tr>
    </tbody>
</table>
@foreach (var item in ViewBag.cart)
{
    if (item.Medicines.IsPrescriptionRequired == true)
    {
        ViewBag.val = true;

        break;

    }
}

<a id="f1"  class="btn btn-success"asp-controller="cart" asp-action="checkout" disabled>Goto Checkout</a>


<a class="btn btn-primary" asp-controller="home" asp-action="viewuser_medicine">Continue Buying</a>

<div style="padding-bottom: 70px;"></div>


